<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Handle SPA routing
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

<IfModule mod_mime.c>
  # Add MIME type for SVG files
  AddType image/svg+xml .svg .svgz
</IfModule>